<%- include("includes/header.ejs") %>

<body>
    <div class="container">
        <div class="card m-3">
            <img src="<%= post.img %>" class="card-img-top"  style="width: 100%; height: 500px; object-fit: cover;"alt="...">
            <div class="card-body">
                <h5 class="card-title">@<%= post.username %></h5>
                <h6 class="card-title"><%= post.caption %> </h6>
                <div class="d-flex ">
                    <p class="card-text me-2">Likes : <%= post.likes %></p>
                    <p class="card-text">Comments : <%= post.comments %></p>
                </div>
            </div>
        </div>
    </div>
</body>

