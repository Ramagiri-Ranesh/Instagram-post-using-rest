<%- include('includes/header.ejs') %>
<body>
    <h1 class="text-center">Instagram</h1>
    <div class="container">
        <h2 class="m-2">All Posts</h2>
        <div class="row">
            <% for (post of posts) { %>
                <div class="col-md-3"> <!-- 4 columns per row -->
                    <div class="card m-2">
                        <div class="card-header">
                            @<%= post.username %>
                        </div>
                        <img src="<%= post.img %>" class="card-img-top" 
                             style="width: 100%; height: 200px; object-fit: cover;" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= post.caption %></h5>
                            <div class="d-flex">
                                <p class="card-text me-2">Likes: <%= post.likes %></p>
                                <p class="card-text">Comments: <%= post.comments %></p>
                            </div>
                            <div class="d-flex">
                                <a href="http://localhost:8080/posts/<%= post.id %>" class="btn btn-primary btn-sm me-1">View</a>
                                <a href="http://localhost:8080/posts/<%= post.id %>/edit" class="btn btn-secondary btn-sm me-1">Edit</a>
                                <form action="/posts/<%= post.id %>?_method=DELETE" method="post">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <a href="http://localhost:8080/posts/new" class="btn btn-outline-primary m-3">Create New Post</a>
    </div>
<%- include('includes/footer.ejs') %>